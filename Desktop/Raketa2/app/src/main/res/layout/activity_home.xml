<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:orientation="horizontal">

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Фио"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.35"
                    android:autoSizeTextType="uniform"
                    android:text="x"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView_dogovor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/white" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20" />
        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.83"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:focusable="auto"
                android:scaleType="fitCenter"
                android:scrollbarStyle="insideOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view18"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="bottom"
                                android:text="Баланс"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/textView_balance"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:autoSizeTextType="uniform"
                                android:lines="1"
                                android:text="2222P"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageButton"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_weight="0.1"
                            android:gravity="top"
                            app:srcCompat="@drawable/wallet" />

                        <View
                            android:id="@+id/view8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/view9"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.1" />


                            <View
                                android:id="@+id/view10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/separator_white"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/view13"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            tools:ignore="NestedWeights" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/separator_white"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/view15"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.05" />

                            <View
                                android:id="@+id/view11"
                                android:layout_width="0dp"
                                android:layout_height="300dp"
                                android:layout_weight="0.9"
                                android:background="@drawable/separator3" />

                            <View
                                android:id="@+id/view16"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.05" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view14"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view20"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />

                        <TextView
                            android:id="@+id/Tarif_and_uslugi"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:autoSizeTextType="uniform"
                            android:background="@color/white"
                            android:text="Тарафы и услуги"
                            android:textColor="@color/red" />

                        <View
                            android:id="@+id/view17"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view23"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.05" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:background="@drawable/rectangl_white_mini"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/view25"
                                android:layout_width="0dp"
                                android:layout_height="0dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <View
                                    android:id="@+id/view27"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="0.9" />

                                <TextView
                                    android:id="@+id/Tarif_and_uslug"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center_vertical"
                                    android:autoSizeTextType="uniform"
                                    android:text="Интернет"
                                    android:textColor="@color/black" />

                                <View
                                    android:id="@+id/view28"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.65"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/tarif_name"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center_vertical"
                                            android:autoSizeTextType="uniform"
                                            android:text="Интернет"
                                            android:textColor="@color/black" />
                                        <TextView
                                            android:id="@+id/tarif_speed"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center_vertical"
                                            android:autoSizeTextType="uniform"
                                            android:text="Интернет"
                                            android:textColor="@color/black" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.2"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/tarif_sum"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center_vertical"
                                            android:autoSizeTextType="uniform"
                                            android:text="Интернет"
                                            android:textColor="@color/red" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.04"
                                        android:orientation="vertical">
                                    <View
                                        android:id="@+id/view30"
                                        android:layout_width="1dp"
                                        android:layout_height="1dp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.2"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/rub"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center_vertical"
                                            android:autoSizeTextType="uniform"
                                            android:text="руб"
                                            android:textColor="@color/red" />
                                        <TextView
                                            android:id="@+id/mes"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center_vertical"
                                            android:autoSizeTextType="uniform"
                                            android:text="мес"
                                            android:textColor="@color/red" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    android:id="@+id/view29"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp" />
                            </LinearLayout>

                            <View
                                android:id="@+id/view26"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view24"
                            android:layout_width="1dp"
                            android:layout_height="1dp" />
                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.075"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.075"
                android:background="@drawable/separator2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_Glavnay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.33"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="Главная" />

                <TextView
                    android:id="@+id/textView_yvedomleniy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.34"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="Оператор" />

                <TextView
                    android:id="@+id/textView_tarif"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.33"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="Уведомления" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>